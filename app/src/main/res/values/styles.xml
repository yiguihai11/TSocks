<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.TSocks" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark Theme -->
    <style name="Theme.TSocks.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.TSocks.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.TSocks.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="Widget.TSocks.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="Widget.TSocks.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="Widget.TSocks.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height_small</item>
    </style>

    <!-- Text Input Styles -->
    <style name="Widget.TSocks.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_medium</item>
        <item name="boxStrokeColor">@color/md_theme_light_outline</item>
    </style>

    <!-- Status Indicator Style -->
    <style name="Widget.TSocks.StatusIndicator">
        <item name="android:layout_width">@dimen/status_indicator_size</item>
        <item name="android:layout_height">@dimen/status_indicator_size</item>
        <item name="android:background">@drawable/status_indicator_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.TSocks.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.TSocks.Toolbar</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.TSocks.Toolbar.Subtitle</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.TSocks.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.TSocks.Toolbar.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.TSocks.CardTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.TSocks.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.TSocks.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.TSocks.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Statistics Text Style -->
    <style name="TextAppearance.TSocks.StatNumber" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TSocks.StatLabel" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.TSocks.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>